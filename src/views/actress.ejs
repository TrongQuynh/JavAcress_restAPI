<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Jav Star</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/w3.css">
    <link rel="stylesheet" href="/loading.css">
</head>

<body>
    <%- include ('tiles/navbar') %>

        <header>
            <div class="w3-container w3-content" style="max-width: 100%;max-height: 50%; margin-top: 120px;">
                <h3 class="w3-leftbar w3-border-blue w3-padding">All Items(<%= numberOfActress %>)</h3>
            </div>
        </header>

        <!-- Search Section -->
        <div class="w3-content w3-row" style="margin: 30px auto;">
            <form action="/JavStar/Actress/Search" method="get">
                <input type="text" name="query" class="w3-input w3-col m11" placeholder="Search">
                <button type="submit" class="w3-button w3-col m1 w3-border w3-hover-blue">
                    <i class="fa fa-search"></i>
                </button>
            </form>
        </div>

        <!-- Alphabet List -->
        <div class="w3-content w3-center">
            <div class="w3-bar">
                <% for(let char of alphabet) {%>
                    <a href="/JavStar/Actress?char=<%= char %>" class="w3-bar-item" style="padding: 0 10px;">
                        <%= char %>
                    </a>
                    <% } %>
            </div>
        </div>

        <!-- Content Pages -->
        <div class="w3-container w3-margin-bottom w3-animate-bottom w3-grey" style="margin-top: 30px;">
            <div class="w3-center">
                <!-- Row -->
                <div class="w3-row">
                    <!-- Colmn -->
                    <% for(let i=0;i<data.length;i++){%>
                        <div class="w3-card-4 w3-center w3-col" style="width:20%; margin: 24px 30px">
                            <img src="<%= data[i].image %>" alt="" width="290px" height="400px">
                            <!-- <button style="width: 100%;" class="w3-button w3-hover-red"><%= data[i].name %> <i
                                class="fa fa-arrow-right"></i></button> -->
                            <a href="<%= data[i].url %>" style="width: 100%;" class="w3-button w3-hover-red">
                                <%= data[i].name %> <i class="fa fa-arrow-right"></i>
                            </a>
                        </div>
                        <% } %>
                </div>

            </div>

            <!-- Paging -->
            <%- include ('tiles/pagination') %>

        </div>

        <%- include ('tiles/footer') %>


</body>

</html>